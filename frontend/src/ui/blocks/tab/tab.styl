.tab
  display: flex;
  align-items: center;
  box-shadow: none;
  background-color: transparent;
  color: #182026;
  cursor: pointer;
  justify-content: center;
  padding: 0 16px;

  &._is-active
    background-color: rgba(19, 124, 189, 0.2);

  &:hover
    color: #0E5A8A;

  &__text
    color: #182026;
    height: 20px;
    text-align: left;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    line-height: 20px;
    margin: 8px 0;
    flex: 1 1 auto;
