@import "../../../index.styl"

.form-layout
  width: 500px;
  max-width: 100%;
  margin: 16px auto;

  @media screen and (min-width: 801px) and (max-width: 880px)
    width: 90%;

  @media screen and (max-width: 510px)
    width: 90%;

  &__plus
    margin: 16px 0;

  &__description._mode-edit
    margin: 16px 0;

  &__title
    font-weight: 300;
    margin: 16px 0 8px;
    width: 100%

  &__button-name
    width: 100%

  &__select
    margin-bottom: 16px
