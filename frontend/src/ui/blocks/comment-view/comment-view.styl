.comment-view
  margin: 16px;
  position: relative;

  &__cross
    opacity: 0.5
    cursor: pointer;
    position: absolute;
    top: 0
    right: 0

    &:hover
      opacity: 0.8

  &__cog
    opacity: 0.5
    cursor: pointer;
    position: absolute;
    top: 0
    right: 20px

    &:hover
      opacity: 0.8


  &__title
    color: rgba(0, 0, 0, 0.5);