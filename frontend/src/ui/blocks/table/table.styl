.table-wrapper
  width: 100%;
  height: 100%;

  &._with-buttons
    height: calc(100% - 30px - 32px);  // 30px for button size 32px for margins

.table
  &._draggable,
  &._draggable &__column-header,
  &._draggable &__cell
    cursor: grabbing !important;
    cursor: -moz-grabbing !important;
    cursor: -webkit-grabbing !important;
  
  &._resizing,
  &._resizing &__column-header,
  &._resizing &__cell
    cursor: ew-resize !important;

  &__header
    background-color: #f5f8fa;

  &__common-header
    cursor: se-resize;
    box-shadow: inset 0 -1px 0 rgba(16, 22, 26, 0.15), inset -1px 0 0 rgba(16, 22, 26, 0.15), inset 1px 0 0 rgba(16, 22, 26, 0.15), inset 0px 1px 0 rgba(16, 22, 26, 0.15);

  &__column-header
    font-size: 14px;
    cursor: s-resize;
    display: flex;
    align-items: center;
    box-shadow: inset 0 -1px 0 rgba(16, 22, 26, 0.15), inset -1px 0 0 rgba(16, 22, 26, 0.15), inset 0px 1px 0 rgba(16, 22, 26, 0.15);
    padding: 0 0 0 4px;

  &__row-header
    cursor: e-resize;
    text-align: right;
    box-shadow: inset 0 -1px 0 rgba(16, 22, 26, 0.15), inset -1px 0 0 rgba(16, 22, 26, 0.15), inset 1px 0 0 rgba(16, 22, 26, 0.15);
    padding: 0 8px;
    display: inline-block;

  &__cell
    cursor: cell;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    padding: 0 8px;
    transition: color 300ms;
    display: inline-block;
    line-height: 20px;
    font-size: 12px;
    box-shadow: inset 0 -1px 0 rgba(16, 22, 26, 0.15), inset -1px 0 0 rgba(16, 22, 26, 0.15);
    user-select: none;

  &__portal
    z-index: 2;
    pointer-events: none;
    position: absolute;
    background: rgba(125, 188, 255, 0.3);
    border: 2px solid #137cbd;

  &__input
    width: 100%;
    border: none;

.column-header
  &__draggable
    padding-right: 4px
    cursor: move;
    cursor: -webkit-grab;
    cursor: -moz-grab;
    cursor: grab;

  &__title
    flex: 1 1 auto;
    white-space: nowrap;
    overflow hidden;
    text-overflow ellipsis

  &__resize-handle
    padding-left: 4px;
    width: 4x;
    height: 100%;
    cursor: ew-resize;

  &__sort-button
    cursor: pointer;